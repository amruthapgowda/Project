<% layout("/layouts/boilerplate") -%>


<h3 class="mb-4">All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
        <div class="card h-100 listing-card">
          <img 
            src="<%= listing.image?.url || 'https://via.placeholder.com/300x200?text=No+Image' %>" 
            class="card-img-top" 
            alt="listing_image" 
            style="height: 20rem; object-fit: cover;"
          />
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title || 'No Title' %></b><br>
              <% if (listing.price != null) { %>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
              <% } else { %>
                <span class="text-muted">Price not listed</span>
              <% } %>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>